<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="178dp"
    android:layout_gravity="center"
    android:background="@drawable/round_corner_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="26dp"
        android:paddingTop="15dp"
        android:paddingEnd="29dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/bookSceen1"
            android:layout_width="106dp"
            android:layout_height="148dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/brave_new_world"
            tools:srcCompat="@tools:sample/avatars"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/caption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:fontFamily="@font/roboto_font"
                    android:text="Brave New\nWorld"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/over_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/vertical_ellipsis"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="9dp" />

            <TextView
                android:id="@+id/annotation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_font"
                android:text="The novel open in the World State\ncity of London in AF (After Ford)\n632 (AD 2540 in te Gregorian..."
                android:textColor="@color/black"
                android:textSize="10sp"></TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/percent1"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="@drawable/round_corner_background"
                    android:fontFamily="@font/roboto_font"
                    android:gravity="center"
                    android:text="52%"
                    android:textColor="@color/black"></TextView>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <ImageButton
                    android:id="@+id/star1"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="@drawable/round_corner_background"
                    android:gravity="center"
                    android:paddingStart="7dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/star_color" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <ImageButton
                    android:id="@+id/trash1"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="@drawable/round_corner_background"
                    android:gravity="center"
                    android:paddingStart="7dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/trash" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>