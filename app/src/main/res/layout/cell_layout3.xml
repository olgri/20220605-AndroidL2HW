<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="178dp"
    android:layout_gravity="center"
    android:background="@drawable/round_corner_background"
    android:paddingStart="26dp"
    android:paddingTop="16dp"
    android:paddingEnd="26dp"
    android:paddingBottom="16dp">


    <ImageView
        android:id="@+id/bookSceen3"
        android:layout_width="106dp"
        android:layout_height="148dp"
        android:src="@drawable/little_woman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/percent3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:background="@drawable/round_corner_background"
        android:fontFamily="@font/roboto_font"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/bookSceen3"
        app:layout_constraintEnd_toStartOf="@id/star3"
        app:layout_constraintStart_toEndOf="@id/bookSceen3"></TextView>

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:background="@drawable/round_corner_background"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingTop="7dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:src="@drawable/star_grey"
        app:layout_constraintBottom_toBottomOf="@id/bookSceen3"
        app:layout_constraintEnd_toStartOf="@id/trash3"
        app:layout_constraintStart_toEndOf="@id/percent3" />

    <ImageButton
        android:id="@+id/trash3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:background="@drawable/round_corner_background"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingTop="7dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:src="@drawable/trash"
        app:layout_constraintBottom_toBottomOf="@id/bookSceen3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/star3" />


    <TextView
        android:id="@+id/caption3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_font"
        android:text="Little Women"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/annotation3"
        app:layout_constraintStart_toStartOf="@id/percent3"
        app:layout_constraintTop_toTopOf="@id/bookSceen3"></TextView>

    <TextView
        android:id="@+id/annotation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_font"
        android:text="The story follows the lives of the\nfour March sisters—Meg, Jo, Beth,\n and Amy—and details their\npassage from childhood to\nwomanhood. It is loosely based..."
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/percent3"
        app:layout_constraintStart_toStartOf="@id/percent3"
        app:layout_constraintTop_toBottomOf="@+id/caption3"></TextView>

    <TextView
        android:id="@+id/over_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/vertical_ellipsis"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/trash3"
        app:layout_constraintTop_toTopOf="@id/bookSceen3" />


</androidx.constraintlayout.widget.ConstraintLayout>