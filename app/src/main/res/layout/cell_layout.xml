<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="26dp"
    android:paddingEnd="26dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >


    <ImageView
        android:id="@+id/bookSceen1"
        android:layout_width="106dp"
        android:layout_height="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/percent1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:text="52%"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintBottom_toBottomOf="@id/bookSceen1"
        app:layout_constraintEnd_toStartOf="@id/star1"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/bookSceen1"

        ></TextView>
    <TextView
        android:id="@+id/star1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:text="Star"
        app:layout_constraintBottom_toBottomOf="@id/bookSceen1"
        app:layout_constraintEnd_toStartOf="@id/trash1"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/percent1"

        ></TextView>
    <TextView
        android:id="@+id/trash1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:text="Trash"
        app:layout_constraintBottom_toBottomOf="@id/bookSceen1"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/star1"

        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>